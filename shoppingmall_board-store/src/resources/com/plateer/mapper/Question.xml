<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.plateer.mapper.QuestionMapper">

    <insert id="insert" parameterType="com.plateer.domain.dto.Question">
        insert into Question (state, writer, date, territory, goodsCode, title, description, smsAlarm, emailAlarm)
        values (#{state}, #{writer}, #{date}, #{territory}, #{goodsCode}, #{title}, #{description}, #{smsAlarm}, #{emailAlarm})
    </insert>

    <select id="select" parameterType="Integer" resultType="com.plateer.domain.dto.Question">
        select * from Question
        where postId = #{postId}
    </select>

    <select id="selectAll" resultType="com.plateer.domain.dto.Question">
        select * from Question
    </select>

    <select id="getRecentQuestion" resultType="Integer">
        select max(postId) from Question
    </select>

    <select id="selectByUserName" parameterType="String" resultType="com.plateer.domain.dto.Question">
        select * from Question
        where writer = #{userName}
    </select>

    <update id="update" parameterType="com.plateer.domain.dto.Question">
		update Question
		set territory=#{territory}, title=#{title}, description=#{description}
		where postId=#{postId}		
    </update>

    <delete id="delete" parameterType="Integer">
        delete from Question
        where postId = #{postId}
    </delete>
</mapper>